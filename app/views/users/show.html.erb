<div class="container col-lg-9 col-md-8 col-12 ">
    <div class="card">
    <!-- Card header -->
    <div class="card-header">
        <h3 class="mb-0">プロフィール</h3>
    </div>
    <!-- Card body -->
    <div class="card-body">
        <div>
            <div class="d-flex align-items-center">
                <%= image_tag @user.decorate.avatar, class: 'avatar-xl rounded-circle' %>
                <div class="container">
                    <div class="d-flex justify-content-between">
                        <h4 class="ms-3"><%= @user.name %></h4>
                        <div id="js-event-bookmark-<%= @user.id %>">
                            <% if current_user.following?(@user) %>
                                <%= render 'users/follows/unfollow', user: @user %>
                            <% else %>
                                <%= render 'users/follows/follow', user: @user %>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-5">
        <div>
            <div class="mb-3 fs-4">
                <%= User.human_attribute_name(:hobby) %>
            </div>
            <div class="mb-3 ms-3">
                <%= @user.hobby %>
            </div>
            <hr class="my-5">
            <div class="mb-3 fs-4">
                <%= User.human_attribute_name(:profile) %>
            </div>
            <div class="mb-3 ms-3">
                <%= @user.profile %>
            </div>
        </div>
    </div>
    </div>
</div>